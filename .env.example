# Resend API Key for contact form emails
# Get this from https://resend.com/dashboard/api-keys
RESEND_API_KEY=your_resend_api_key_here

# Cloudflare Turnstile (contact form CAPTCHA)
# Get these from https://dash.cloudflare.com/ → Turnstile
TURNSTILE_SITE_KEY=your_turnstile_site_key_here
TURNSTILE_SECRET_KEY=your_turnstile_secret_key_here

# Upstash Redis (contact form rate limiting)
# Get these from https://console.upstash.com/
UPSTASH_REDIS_REST_URL=your_upstash_redis_rest_url_here
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_rest_token_here

# Public canonical URL used for metadata, robots, and sitemap
NEXT_PUBLIC_SITE_URL=https://ayasser.com

# Microsoft Clarity - session replay and heatmaps
# Get your project ID from https://clarity.microsoft.com/
# Only active in Vercel production deployments (not preview or local)
# Must also be set in Vercel Dashboard > Settings > Environment Variables
CLARITY_PROJECT_ID=your_clarity_project_id_here

# ============================================
# v1.2 Analytics Audit (scripts/audit/)
# ============================================

# Microsoft Clarity Data Export API token (JWT)
# Generate at: https://clarity.microsoft.com → Settings → API
CLARITY_API_TOKEN=your_clarity_api_token_here

# Google PageSpeed Insights API key
# Create at: https://console.cloud.google.com → Credentials → API Key
# Enable: PageSpeed Insights API
PSI_API_KEY=your_psi_api_key_here
